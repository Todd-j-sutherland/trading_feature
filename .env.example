# Trading System Feature Flags
# Set to 'true' to enable, 'false' to disable
# Copy this file to .env and modify as needed

# === PHASE 1: Quick Wins ===
FEATURE_CONFIDENCE_CALIBRATION=false
FEATURE_ANOMALY_DETECTION=false
FEATURE_BACKTESTING_ENGINE=false

# === PHASE 2: Enhanced Analytics ===
FEATURE_MULTI_ASSET_CORRELATION=false
FEATURE_INTRADAY_PATTERNS=false
FEATURE_ADVANCED_VISUALIZATIONS=false

# === PHASE 3: Advanced ML ===
FEATURE_ENSEMBLE_MODELS=false
FEATURE_POSITION_SIZING=false
FEATURE_LIVE_MARKET_DATA=false

# === PHASE 4: Full Trading System ===
FEATURE_PAPER_TRADING=false

# Paper Trading Mock Simulator Configuration
# Set to 'true' to use real ML components by default (recommended for production-quality testing)
# Set to 'false' to use mock ML simulation by default (faster for rapid prototyping)
PAPER_TRADING_USE_REAL_ML=true
FEATURE_RISK_DASHBOARD=false
FEATURE_OPTIONS_FLOW=false

# === Additional Features ===
FEATURE_MOBILE_ALERTS=false
FEATURE_SENTIMENT_MOMENTUM=false
FEATURE_NEWS_IMPACT=false
FEATURE_DYNAMIC_STOP_LOSS=false

# === Development & Testing ===
FEATURE_DEBUG_MODE=false
FEATURE_PERFORMANCE_MONITORING=false
FEATURE_A_B_TESTING=false

# === API Keys (when features are enabled) ===
# ALPHA_VANTAGE_API_KEY=your_key_here
# YAHOO_FINANCE_API_KEY=your_key_here
# SLACK_WEBHOOK_URL=your_webhook_here
# DISCORD_WEBHOOK_URL=your_webhook_here
